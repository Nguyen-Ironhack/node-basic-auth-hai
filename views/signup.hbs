<h2>Sign Up</h2>

<form action="/signup" method="POST">
  <label for="username"></label>
  <input type="text" name="username">
  <label for="password"></label>
  <input type="password" name="password">
  <button type="submit">Signup</button>
</form>
{{#if message}}
  <p style='color: red'>{{message}}</p>
{{/if}}